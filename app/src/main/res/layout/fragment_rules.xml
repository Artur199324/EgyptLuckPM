<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/fon"
    tools:context=".ui.RulesFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_main_menu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginBottom="@dimen/mini_margin"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/my_font"
        android:text="@string/to_main_nmenu"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/my_font"
        android:gravity="center"
        android:text="@string/in_this_game_you_should_catch_nright_symbols_in_game_screen_npress_start_button_game_will_generate_random_symbol_nthat_you_should_catch_by_clicking_button_catch"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>